<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/index" >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="1"
        android:src="@drawable/index"
        android:gravity="center"
        android:background="#035efa"
        android:layout_marginBottom="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="2"
            android:src="@drawable/index"
            android:gravity="center"
            android:layout_weight="6"
            android:background="#afaba2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="3"
            android:src="@drawable/index"
            android:gravity="center"
            android:layout_weight="6"
            android:background="#ec7f7f"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="4"
            android:gravity="center"
            android:layout_weight="6"
            android:background="#16b1e4"
            android:src="@drawable/index"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="5"
            android:gravity="center"
            android:layout_weight="6"
            android:src="@drawable/index"
            android:background="#f40e29"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="6"
            android:gravity="center"
            android:layout_weight="6"
            android:src="@drawable/index"
            android:background="#de7fc9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="7"
            android:gravity="center"
            android:layout_weight="6"
            android:background="#d10f4e"
            android:src="@drawable/index"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="8"
            android:gravity="center"
            android:background="#1bd121"
            android:src="@drawable/index"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="9"
            android:gravity="center"
            android:src="@drawable/index"
            android:background="#7c747c"/>
    </LinearLayout>


</LinearLayout>


